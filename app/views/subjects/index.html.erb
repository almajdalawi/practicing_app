<% @page_title = 'Subjects' %>

<div class='subject index' >
    <h1>Subjects</h1>

    <div> <%= pluralize(@subjects.size, 'subject')%> found 
    <%= link_to(image_tag('plus_sign.png', size: '11x11', alt: '+') + ' New Subject', {action: 'new'}, class: 'action new')%>
    </div>

    <table class="listing" summary="Subject list">
        <tr class="header">
        <th>&nbsp;</th>
        <th>Name</th>
        <th>Visible</th>
        <th># Pages</th>
        <th colspan="3">Actions</th>
        </tr>
        <% @subjects.each do |subject| %>
        <tr class="<%= cycle('odd', 'even') %>">
            <td><%= subject.position %></td>
            <td><%= subject.name %></td>
            <td class="center"><%= status_tag(subject.visible) %></td>
            <td class="center"><%= subject.pages.size %></td>
           <td class="actions">
                <%= link_to('Show', {action: 'show', id: subject.id}, class: 'action show')  %>
                <%= link_to('Edit', {action: 'edit', id: subject.id}, class: 'action edit')  %>
                <%= link_to('Destroy', {action: 'delete', id: subject.id}, class: 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
    <br>
</div>