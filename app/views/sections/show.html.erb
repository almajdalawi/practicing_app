<% if !flash[:notice].blank? %>
    <div class="notice-msg"><%= flash[:notice] %></div>
<% elsif !flash[:error].blank? %>
    <div class="error-msg"><%= flash[:error] %></div>
<% end %>

<%= link_to('Back to List', {action: 'index'}, class: 'back-link')%>

<div class="Section detail view">
    <h1>Section: <%= @section.name %></h1>
    <table class="listing" summary="Section details">
        <tr>
            <th>Name</th>
            <td><%= @section.name %></td>
        </tr>
        <tr>
            <th>Position</th>
            <td><%= @section.position %></td>
        </tr>
        <tr>
            <th>Visible</th>
            <td><%= @section.visible ? "Yes" : "No" %></td>
        </tr>
        <tr>
            <th>Page ID</th>
            <td><%= @section.page_id %></td>
        </tr>
        <tr>
            <th>Content Type</th>
            <td><%= @section.content_type %></td>
        </tr>
        <tr>
            <th>Content</th>
            <td><%= @section.content %></td>
        </tr>
        <tr>
            <th>Created at</th>
            <td><%= @section.created_at %></td> 
        </tr>
        <tr>
            <th>Updated at</th>
            <td><%= @section.updated_at %></td>
        </tr>
    </table>
    <br>
    <%= link_to('Edit', {action: 'edit', id: @section.id}, class: 'action edit')%>
    <%= link_to('Delete', {action: 'destroy', id: @section.id}, method: :delete, data: { confirm: 'Are you sure?' }, class: 'action delete')%>