<%= error_messages_for(@section) %>

<table class="listing" summary="Section form fields">
    <tr>
        <th><%= f.label(:name, 'Name')%></th>
        <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
        <th> <%= f.label(:position)%></th>
        <td><%= f.select :position, options_for_select(1..@section_count, selected: @section.position) %></td>
    <tr>
        <th><%= f.label(:visible)%></th>
        <td><%= f.check_box(:visible) %></td>
    </tr>
    <tr>
        <th><%= f.label(:page)%></th>
        <td><%= f.select(:page_id, options_for_select(@pages.map{|p| [p.name, p.id]}, selected: @section.page_id)) %></td>
    </tr>
    <tr>
        <th><%= f.label(:content_type, 'Content Type')%></th>
        <td><%= f.select(:content_type, options_for_select(@content_types)) %></td>
    </tr>
    <tr>
        <th><%= f.label(:content)%></th>
        <td><%= f.text_area(:content, size: '40x10') %></td>
    </tr>
</table>