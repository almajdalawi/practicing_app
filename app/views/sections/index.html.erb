<% if !flash[:notice].blank? %>
    <div class="notice-msg"><%= flash[:notice] %></div>
<% elsif !flash[:error].blank? %>
    <div class="error-msg"><%= flash[:error] %></div>
<% end %>

<div class='section index' >
    <h1>Sections</h1>
    <% link_to 'New Section', {action: 'new'}, class: 'action new' %>
    <table class="listing" summary="Section list">
        <tr class="header">
        <th>&nbsp;</th>
        <th>Name</th>
        <th>Visible</th>
        <th>Content Type</th>
        <th>Page ID</th>
        <th colspan="3">Actions</th>
        </tr>
        <% @sections.each do |section| %>
        <tr>
            <td><%= section.position %></td>
            <td><%= section.name %></td>
            <td><%= section.visible ? "Yes" : "No" %></td>
            <td><%= section.content_type %></td>
            <td><%= section.page_id %></td>

            <td><%= link_to 'Show', {action: 'show', id: section.id}  %></td>
            <td><%= link_to 'Edit', {action: 'edit', id: section.id}  %></td>
            <td><%= link_to 'Destroy', {action: 'delete', id: section.id} %></td>
        </tr>
        <% end %>
    </table>
    <br>
    <%= link_to 'New Section', {action: 'new'}, class: 'action new' %>
</div>