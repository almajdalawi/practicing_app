<% if !flash[:notice].blank? %>
    <div class="notice-msg"><%= flash[:notice] %></div>
<% elsif !flash[:error].blank? %>
    <div class="error-msg"><%= flash[:error] %></div>
<% end %>

<%= link_to('Back to List', {action: 'index'}, class: 'back-link')%>

<div class="Page detail view">
    <h1>Page: <%= @page.name %></h1>
    <table class="listing" summary="Page details">
        <tr>
            <th>Name</th>
            <td><%= @page.name %></td>
        </tr>
        <tr>
            <th>Position</th>
            <td><%= @page.position %></td>
        </tr>
        <tr>
            <th>PermaLink</th>
            <td><%= @page.permalink %></td>
        </tr>
        <tr>
            <th>Visible</th>
            <td><%= @page.visible ? "Yes" : "No" %></td>
        </tr>
        <tr>
            <th>Subject ID</th>
            <td><%= @page.subject_id %></td>
        </tr>
        <tr>
            <th>Created at</th>
            <td><%= @page.created_at %></td> 
        </tr>
        <tr>
            <th>Updated at</th>
            <td><%= @page.updated_at %></td>
        </tr>
    </table>
    <br>
    <%= link_to('Edit', {action: 'edit', id: @page.id}, class: 'action edit')%>
    <%= link_to('Delete', {action: 'destroy', id: @page.id}, method: :delete, data: { confirm: 'Are you sure?' }, class: 'action delete')%>