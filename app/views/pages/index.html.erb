<% @page_title = 'Pages' %>

<div class='page index' >
    <h1>Pages</h1>

    <div> <%= pluralize(@pages.size, 'page')%> found 
    <%= link_to(image_tag('plus_sign.png', size: '11x11', alt: '+') + ' New Page', {action: 'new'}, class: 'action new') %>
    </div>

    <table class="listing" summary="Page list">
        <tr class="header">
        <th>&nbsp;</th>
        <th>Name</th>
        <th>Visible</th>
        <th>Perma Link</th>
        <th>Subject ID</th>
        <th># Sections</th>
        <th>Actions</th>
        </tr>
        <% @pages.each do |page| %>
        <tr class="<%= cycle('odd', 'even') %>">
            <td><%= page.position %></td>
            <td><%= page.name %></td>
            <td class="center"><%= status_tag(page.visible) %></td>
            <td><%= page.permalink%> </td>
            <td class="center"><%= page.subject.name if page.subject %></td>
            <td class="center"><%= page.sections.size %></td>
            <td class="actions">
                <%= link_to('Show', {action: 'show', id: page.id}, class: 'action show')  %>
                <%= link_to('Edit', {action: 'edit', id: page.id}, class: 'action edit')  %>
                <%= link_to('Destroy', {action: 'delete', id: page.id}, class: 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
    <br>
</div>