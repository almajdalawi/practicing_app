<% if !flash[:notice].blank? %>
    <div class="notice-msg"><%= flash[:notice] %></div>
<% elsif !flash[:error].blank? %>
    <div class="error-msg"><%= flash[:error] %></div>
<% end %>

<div class='page index' >
    <h1>Pages</h1>
    <% link_to 'New Page', {action: 'new'}, class: 'action new' %>
    <table class="listing" summary="Page list">
        <tr class="header">
        <th>&nbsp;</th>
        <th>Name</th>
        <th>Visible</th>
        <th>Perma Link</th>
        <th>Subject ID</th>
        <th># Sections</th>
        <th colspan="3">Actions</th>
        </tr>
        <% @pages.each do |page| %>
        <tr>
            <td><%= page.position %></td>
            <td><%= page.name %></td>
            <td><%= page.visible ? "Yes" : "No" %></td>
            <td><%= page.permalink%> </td>
            <td><%= page.subject_id %></td>
            <td><%= page.sections.size %></td>

            <td><%= link_to 'Show', {action: 'show', id: page.id}  %></td>
            <td><%= link_to 'Edit', {action: 'edit', id: page.id}  %></td>
            <td><%= link_to 'Destroy', {action: 'delete', id: page.id} %></td>
        </tr>
        <% end %>
    </table>
    <br>
    <%= link_to 'New Page', {action: 'new'}, class: 'action new' %>
</div>