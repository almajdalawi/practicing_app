<%= link_to('Back to List', {action: 'index'}, class: 'back-link')%>

<div class="page edit">
    <h1>Update Page</h1>
    <%= form_for(:page, url: {action: 'update', id: @page.id}) do |f| %>
        <table class="listing" summary="Page form fields">
            <tr>
                <th>Name</th>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= f.number_field :position %></td>
            </tr>
            <tr>
                <th>PermaLink</th>
                <td><%= f.text_field :permalink %></td>
            <tr>
                <th>Visible</th>
                <td><%= f.check_box :visible %></td>
            </tr>
            <tr>
            <tr>
                <th>Subject ID</th>
                <td><%= f.select :subject_id, options_for_select(@subject_ids, selected: @page.subject_id) %></td>
            </tr>
        </table>
        <br>

        <div class="form-btn">
        <%= f.submit 'Update Page' %>
        </div>
    <% end %>
</div>