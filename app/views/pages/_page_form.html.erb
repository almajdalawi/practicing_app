<%= error_messages_for(@page) %>
 
 <table class="listing" summary="Page form fields">
    <tr>
        <th><%= f.label(:name, 'Name')%></th>
        <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
        <th> <%= f.label(:position)%></th>
        <td><%= f.select(:position, options_for_select(1..@page_count, selected: @page.position)) %></td>
    </tr>
    <tr>
        <th><%= f.label(:permaLink)%></th>
        <td><%= f.text_field(:permalink) %></td>
    </tr>
    <tr>
        <th><%= f.label(:Visible)%></th>
        <td><%= f.check_box(:visible) %></td>
    </tr>
    <tr>
        <th><%= f.label(:subject)%></th>
        <td><%= f.select(:subject_id, options_for_select(@subjects.map{|s| [s.name, s.id]}, selected: @page.subject_id )) %></td>
    </tr>
</table>
