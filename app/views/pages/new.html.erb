<%= link_to('Back to List', {action: 'index'}, class: 'back-link')%>

<div class="page new">
    <h1>Create New Page</h1>
    <%= form_for(:page, url: {action: 'create'}) do |f| %>
        <table class="listing" summary="Page form fields">
            <tr>
                <th>Name</th>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= f.number_field :position %></td>
            </tr>
                <th>PermaLink</th>
                <td><%= f.text_field :permalink %>
            </tr>
            <tr>
                <th>Visible</th>
                <td><%= f.check_box :visible %></td>
            </tr>
            <tr>
                <th>Subject ID</th>
                <td><%= f.select :subject_id, options_for_select(@subjects_ids) %></td>
            </tr>
            <tr>
        </table>
        <br>

        <div class="form-btn">
        <%= f.submit 'Create Page' %>
        </div>
    <% end %>
</div>